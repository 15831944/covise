<xsd:import namespace="http://www.w3.org/XML/1998/namespace" schemaLocation="xml.xsd"/>



<!-- -->
<!-- ComplexType -->
<!-- -->

<xsd:complexType name="OSCCoord">
    <xsd:all>
        <xsd:element name="position">
            <xsd:complexType>
                <xsd:attribute name="x" type="xsd:double" use="required"/>
                <xsd:attribute name="y" type="xsd:double" use="required"/>
                <xsd:attribute name="z" type="xsd:double" use="required"/>
                <xsd:attribute ref="xml:base"/>
            </xsd:complexType>
        </xsd:element>
        <xsd:element name="orientation">
            <xsd:complexType>
                <xsd:attribute name="h" type="xsd:double" use="required"/>
                <xsd:attribute name="p" type="xsd:double" use="required"/>
                <xsd:attribute name="r" type="xsd:double" use="required"/>
                <xsd:attribute ref="xml:base"/>
            </xsd:complexType>
        </xsd:element>
    </xsd:all>
    <xsd:attribute ref="xml:base"/>
</xsd:complexType>


</xsd:schema>
