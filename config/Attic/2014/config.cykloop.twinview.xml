         </DocumentViewer>

         <ConicSection value="off"/>

         <CfdGui value="on"/>

      </Plugin>

      <ScaleAll value="OFF" />
 
      <Stereo enable="ON" value="ON" />

      <Menu>
         <Orientation h="0" p="0" r="0" />
