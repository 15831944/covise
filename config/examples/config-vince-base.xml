   </Background>

   <Stereo separation="1.0" value="off" />
   <Cluster value="off" />

   <Backend name="covise" >
    <PluginDir value="/lib/vcplugins" />
    <Threaded value="false" />
   </Backend>

   <Backend name="none" >
    <PluginDir value="/lib/vcplugins" />
   </Backend>

   <Backend name="yac" >
    <PluginDir value="/lib/vcplugins" />
   </Backend>

   <Backend name="standalone" >
    <PluginDir value="/lib/vcplugins" />
   </Backend>

   <ActionModel>

    <ActionContainer name="File" >
     <Position value="1" name="menu" />

     <Action name="open_file" >
      <Position value="2" name="menu" />
      <Position value="1" name="toolbar" />
      <Position value="off" name="fullscreen" />
     </Action>

     <Action name="import_file" >
      <Position value="2" name="menu_desktop" />
      <Position value="off" name="toolbar" />
      <Position value="off" name="fullscreen" />
     </Action>

     <Action name="save_scene" >
