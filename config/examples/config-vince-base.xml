      <Position value="off" name="fullscreen" />
     </Action>

    </ActionContainer>

    <ActionContainer name="Lights" >
     <Position value="6" name="menu" />

     <ActionContainer name="Headlight" >
      <Position value="1" name="menu" />

      <Action name="toggle_headlight" >
       <Position value="1" name="menu" />
