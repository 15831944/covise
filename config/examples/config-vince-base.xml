<?xml version="1.0"?>

<COCONFIG version="1" >

 <GLOBAL>

  <ViNCERenderer>

   <Background style="solid"> <!-- style: solid or gradient -->
      <Color1 r="100" g="90" b="125"/> <!-- C1 for gradient -->
      <Color2 r="160" g="220" b="255"/> <!-- C2 for gradient -->
