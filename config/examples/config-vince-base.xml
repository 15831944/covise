      <Position value="9999" name="menu" />
      <Position value="off" name="toolbar" />
      <Position value="off" name="fullscreen" />
     </Action>

    </ActionContainer>

    <ActionContainer name="View" >
     <Position value="2" name="menu" />

     <Action name="view_all" >
      <Position value="1" name="menu" />
      <Position value="1" name="toolbar" />
