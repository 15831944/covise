MACRO(USE_CURSES)
   COVISE_FIND_PACKAGE(Curses)
   IF ((NOT CURSES_FOUND) AND (${ARGC} LESS 1))
      USING_MESSAGE("Skipping because of missing CURSES")
    RETURN()
 ENDIF((NOT CURSES_FOUND) AND (${ARGC} LESS 1))
 IF(NOT CURSES_USED AND CURSES_FOUND)
    SET(CURSES_USED TRUE)
    ADD_DEFINITIONS(-DHAVE_CURSES)
    INCLUDE_DIRECTORIES(${CURSES_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${CURSES_LIBRARIES} ${CURSES_LIBRARY} ${CURSES_CURSES_LIBRARY})
  ENDIF()
ENDMACRO(USE_CURSES)
  
