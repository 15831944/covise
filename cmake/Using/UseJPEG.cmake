MACRO(USE_JPEG)
  IF ((NOT JPEG_FOUND) AND (NOT JPEGTURBO_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing JPEG")
    RETURN()
  ENDIF ((NOT JPEG_FOUND) AND (NOT JPEGTURBO_FOUND) AND (${ARGC} LESS 1))
  if (JPEGTURBO_FOUND)
     USE_JPEGTURBO()
  else()
     IF(NOT JPEG_USED AND JPEG_FOUND)
        SET(JPEG_USED TRUE)
        INCLUDE_DIRECTORIES(SYSTEM ${JPEG_INCLUDE_DIR})
        SET(EXTRA_LIBS ${EXTRA_LIBS} ${JPEG_LIBRARIES})
     ENDIF()
  endif()
ENDMACRO(USE_JPEG)

