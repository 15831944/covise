MACRO(USE_CUDPP)
  IF ((NOT CUDPP_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing CUDPP")
    RETURN()
  ENDIF((NOT CUDPP_FOUND) AND (${ARGC} LESS 1))
  IF(NOT CUDPP_USED AND CUDPP_FOUND)
    SET(CUDPP_USED TRUE)
    INCLUDE_DIRECTORIES(SYSTEM ${CUDPP_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${CUDPP_LIBRARIES})
  ENDIF()
ENDMACRO(USE_CUDPP)

