MACRO(USE_PROJ4)
  FIND_PACKAGE(PROJ4)
  IF ((NOT PROJ4_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing PROJ4")
    RETURN()
  ENDIF((NOT PROJ4_FOUND) AND (${ARGC} LESS 1))
  IF(NOT PROJ4_USED AND PROJ4_FOUND)
    SET(PROJ4_USED TRUE)
    INCLUDE_DIRECTORIES(${PROJ4_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${PROJ4_LIBRARIES})
  ENDIF()
ENDMACRO(USE_PROJ4)

