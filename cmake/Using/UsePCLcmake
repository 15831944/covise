MACRO(USE_PCL)
  FIND_PACKAGE(PCL)
  IF ((NOT PCL_FOUND)  AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing PCL")
    RETURN()
  ENDIF((NOT PCL_FOUND) AND (${ARGC} LESS 1))
  IF(NOT PCL_USED AND PCL_FOUND)
    SET(PCL_USED TRUE)
    INCLUDE_DIRECTORIES(${PCL_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${PCL_LIBRARIES})
  ENDIF()
ENDMACRO(USE_PCL)

