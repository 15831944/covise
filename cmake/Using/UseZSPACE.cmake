MACRO(USE_ZSPACE)
  FIND_PACKAGE(ZSPACE)
  IF ((NOT ZSPACE_FOUND)  AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing ZSPACE")
    RETURN()
  ENDIF((NOT ZSPACE_FOUND) AND (${ARGC} LESS 1))
  IF(NOT ZSPACE_USED AND ZSPACE_FOUND)
    SET(ZSPACE_USED TRUE)
    INCLUDE_DIRECTORIES(${ZSPACE_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${ZSPACE_LIBRARIES})
  ENDIF()
ENDMACRO(USE_ZSPACE)

