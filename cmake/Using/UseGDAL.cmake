MACRO(USE_GDAL)
  covise_find_package(GDAL)
  IF ((NOT GDAL_FOUND)  AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing GDAL")
    RETURN()
  ENDIF((NOT GDAL_FOUND) AND (${ARGC} LESS 1))
  USE_GEOTIFF( OPTIONAL )
  IF(NOT GDAL_USED AND GDAL_FOUND)
    SET(GDAL_USED TRUE)
    INCLUDE_DIRECTORIES(SYSTEM ${GDAL_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${GDAL_LIBRARIES})
  ENDIF()
ENDMACRO(USE_GDAL)

