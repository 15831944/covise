MACRO(USE_PHYSX)
  covise_find_package(PHYSX)
  IF ((NOT PHYSX_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing PHYSX")
    RETURN()
  ENDIF((NOT PHYSX_FOUND) AND (${ARGC} LESS 1))
  IF(NOT PHYSX_USED AND PHYSX_FOUND)
    SET(PHYSX_USED TRUE)
    INCLUDE_DIRECTORIES(${PHYSX_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${PHYSX_LIBRARIES})
  ENDIF()
ENDMACRO(USE_PHYSX)

